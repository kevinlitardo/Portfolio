---
import Pill from "./Pill.astro";
export interface I_Timeline_item_data {
  date: string;
  title: string;
  description: string;
  image: string;
  tags: string[];
  link: null | string;
}

const { date, title, description, image, tags, link } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
  >
  </div>

  <time
    class="mb-1 text-md lg:text-lg font-semibold leading-none text-gray-400"
  >
    {date}
  </time>

  <h3 class="text-xl font-semibold text-blue-500 mt-3">
    {title}
  </h3>

  <p class="mb-4 text-lg text-gray-200 text-pretty">
    {description}
  </p>

  <img
    src={image}
    alt={`${title} screenshot`}
    class="mb-4 rounded-md object-cover shadow-2xl shadow-white/5"
  />

  <ul class="flex flex-row gap-4 flex-wrap mb-6">
    {
      tags.map((item: string) => (
        <li>
          <Pill>{item}</Pill>
        </li>
      ))
    }
  </ul>

  {
    link && (
      <a
        href={link}
        target="_blank"
        rel="noreferrer noopener"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-zinc-700 border border-zinc-500 rounded-md hover:bg-zinc-600 focus:z-10 focus:ring-4 focus:outline-none focus:ring-zinc-400 "
      >
        Check it out{" "}
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </a>
    )
  }
</li>
